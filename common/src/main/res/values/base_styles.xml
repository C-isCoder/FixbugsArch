<resources>

    <!-- 顶部标题栏 -->
    <style name="top_bar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
    </style>

    <style name="integral_top_bar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
    </style>

    <!--标题ImageButton样式-->
    <style name="top_bar_btn_left">
        <item name="android:layout_width">@dimen/top_bar_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/top_padding</item>
        <item name="android:paddingRight">@dimen/top_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@null</item>
    </style>
    <!--标题TextView样式-->
    <style name="top_bar_tv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/top_padding</item>
        <item name="android:paddingRight">@dimen/top_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!--标题 返回 样式-->
    <style name="top_bar_back">
        <item name="android:layout_width">@dimen/top_bar_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/top_padding</item>
        <item name="android:paddingRight">@dimen/top_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">back</item>
        <item name="android:background">@null</item>
    </style>
    <!--标题ImageButton样式-->
    <style name="top_bar_btn_right">
        <item name="android:layout_width">@dimen/top_bar_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/top_padding</item>
        <item name="android:paddingRight">@dimen/top_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--标题TextView样式-->
    <style name="top_bar_tv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/top_padding</item>
        <item name="android:paddingRight">@dimen/top_padding</item>
        <item name="android:textColor">@color/top_bar_title_color</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 中间题目样式-->
    <style name="top_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/top_bar_title_color</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 横线-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!-- 竖线-->
    <style name="line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="line_horizontal.title">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="top_bar_layout.immerse">
        <item name="android:layout_height">68dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

</resources>
